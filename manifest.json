{
  "manifest_version": 3,
  "name": "記事要約＆解説アシスタント",
  "version": "1.0",
  "description": "ウェブページの主要な情報を抽出し、要約と背景知識の解説を表示します。",
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_default_16.png",
      "48": "icons/icon_default_48.png",
      "128": "icons/icon_default_128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
} 